{
	"name": "rorlabs",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"workspaces": [
		"backend",
		"frontend",
		"shared"
	],
	"scripts":{
		"dev:backend": "bun run --cwd backend dev",
		"dev:frontend": "bun run --cwd frontend dev",
		"build:frontend": "bun run --cwd frontend build",
		"start": "bun run build:frontend && bun run --cwd backend start"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}